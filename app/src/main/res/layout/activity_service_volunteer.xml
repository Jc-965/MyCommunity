<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerActivity">

    <!-- Row 1 -->
    <ImageView
        android:id="@+id/image1"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/volunteering_image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Habitat for Humanity"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image1" />

    <TextView
        android:id="@+id/description1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join Habitat for Humanity and help build affordable housing for those in need."
        app:layout_constraintStart_toStartOf="@id/title1"
        app:layout_constraintEnd_toEndOf="@id/title1"
        app:layout_constraintTop_toBottomOf="@id/title1"/>
    <!-- Row 2 -->
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/image2"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/volunteering_image2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Red Cross Disaster Relief"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image2" />

    <TextView
        android:id="@+id/description2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Support the Red Cross in providing relief and assistance to disaster-affected areas."
        app:layout_constraintStart_toStartOf="@id/title2"
        app:layout_constraintEnd_toEndOf="@id/title2"
        app:layout_constraintTop_toBottomOf="@id/title2"/>
    <!-- Row 3 -->
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/image3"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/volunteering_image3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meals on Wheels"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/image3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image3" />

    <TextView
        android:id="@+id/description3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deliver nutritious meals to homebound seniors and individuals with disabilities."
        app:layout_constraintStart_toStartOf="@id/title3"
        app:layout_constraintEnd_toEndOf="@id/title3"
        app:layout_constraintTop_toBottomOf="@id/title3"/>
    <!-- Row 4 -->
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/image4"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/volunteering_image4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image3" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Big Brothers Big Sisters"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/image4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image4" />

    <TextView
        android:id="@+id/description4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Become a mentor and make a positive impact on a child's life."
        app:layout_constraintStart_toStartOf="@id/title4"
        app:layout_constraintEnd_toEndOf="@id/title4"
        app:layout_constraintTop_toBottomOf="@id/title4"/>
    <!-- Row 5 -->
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/image5"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/volunteering_image5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image4" />

    <TextView
        android:id="@+id/title5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Environmental Cleanup"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/image5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image5" />

    <TextView
        android:id="@+id/description5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join a local environmental organization and help clean up parks and natural areas."
        app:layout_constraintStart_toStartOf="@id/title5"
        app:layout_constraintEnd_toEndOf="@id/title5"
        app:layout_constraintTop_toBottomOf="@id/title5"
         />

    <include
        layout="@layout/reusable_main_buttons" />

</androidx.constraintlayout.widget.ConstraintLayout>











